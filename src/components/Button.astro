---
export interface Props {
	href?: string;
	text?: string;
}

const { href = "#Contact", text = "Contact Us" } = Astro.props;
---

<a 
href={href}
class="relative inline-flex items-center bg-indigo-50 justify-start px-5 py-3 overflow-hidden font-bold rounded-lg group cursor-pointer no-underline">
<span
class="w-32 h-32 rotate-45 translate-x-12 -translate-y-2 absolute left-0 top-0 bg-[#D52027] opacity-[3%]"></span>
<span
class="absolute top-0 left-0 w-48 h-48 -mt-1 transition-all duration-500 ease-in-out rotate-45 -translate-x-56 -translate-y-24 bg-[#D52027] opacity-100 group-hover:-translate-x-8"></span>
<span
class="relative w-full text-base font-semibold text-left text-gray-900 transition-colors duration-200 ease-in-out group-hover:text-white">{text}</span>
<span class="absolute inset-0 border-2 border-white rounded-md"></span>
</a>
