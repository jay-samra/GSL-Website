---

	<nav class="absolute top-0 left-0 w-full z-50 bg-black/20 backdrop-blur-sm">
		<div class="max-w-7xl mx-auto px-6">
			<div class="flex items-center justify-between h-20">
				
				<!-- can be replaced with picture-->
				<div class="flex-shrink-0">
					<a href="/" class="text-2xl font-bold text-white hover:text-blue-300 transition-colors duration-200">
						Golden State Lines
					</a>
				</div>

				<!-- Nav Links -->
				<div class="hidden md:block">
					<ul class="flex items-center space-x-8">
						<li>
							<a href="#About" class="text-white hover:text-blue-300 px-3 py-2 text-lg font-medium transition-colors duration-200 border-b-2 border-transparent hover:border-blue-300">
								About
							</a>
						</li>
						<li>
							<a href="#Services" class="text-white hover:text-blue-300 px-3 py-2 text-lg font-medium transition-colors duration-200 border-b-2 border-transparent hover:border-blue-300">
								Services
							</a>
						</li>
						<li>
							<a href="#Career" class="text-white hover:text-blue-300 px-3 py-2 text-lg font-medium transition-colors duration-200 border-b-2 border-transparent hover:border-blue-300">
								Careers
							</a>
						</li>
						<li>
							<a href="#Contact" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-lg font-semibold transition-colors duration-200 shadow-lg">
								Contact Us
							</a>
						</li>
					</ul>
				</div>

				<!-- Mobile menu button -->
				<div class="md:hidden">
					<button type="button" class="text-white hover:text-blue-300 focus:outline-none focus:text-blue-300 transition-colors duration-200" onclick="toggleMobileMenu()">
						<svg class="h-6 w-6 fill-current" viewBox="0 0 24 24">
							<path d="M4 6h16v2H4zm0 5h16v2H4zm0 5h16v2H4z"/>
						</svg>
					</button>
				</div>
			</div>

			<!-- Mobile menu (hidden by default) -->
			<div id="mobile-menu" class="md:hidden hidden bg-black/80 backdrop-blur-sm rounded-lg mt-2 p-4">
				<ul class="space-y-3">
					<li>
						<a href="#About" class="block text-white hover:text-blue-300 px-3 py-2 text-lg font-medium transition-colors duration-200">
							About
						</a>
					</li>
					<li>
						<a href="#Services" class="block text-white hover:text-blue-300 px-3 py-2 text-lg font-medium transition-colors duration-200">
							Services
						</a>
					</li>
					<li>
						<a href="#Career" class="block text-white hover:text-blue-300 px-3 py-2 text-lg font-medium transition-colors duration-200">
							Careers
						</a>
					</li>
					<li>
						<a href="#Contact" class="block bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-lg font-semibold transition-colors duration-200 text-center">
							Contact Us
						</a>
					</li>
				</ul>
			</div>
		</div>
	</nav>

	<script>
		function toggleMobileMenu() {
			const menu = document.getElementById('mobile-menu');
			if (menu) {
				menu.classList.toggle('hidden');
			}
		}
	</script>
