import About from "../components/AboutSection.astro";
import Services from "../components/ServicesSection.astro"
import CareerSection from "../components/CareerSection.astro";
import ContactSection from "../components/ContactSection.astro";
import Copyright from "../components/Copyright.astro";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Golden State Lines INC.</title>

		<link rel="preconnect" href="https://fonts.googleapis.com" />
  		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link href="https://fonts.googleapis.com/css2?family=Kanit:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Montserrat:ital,wght@0,100..900;1,100..900&family=Scheherazade+New:wght@400;500;600;700&display=swap" rel="stylesheet">

	</head>
	
	


	<!-- Hero Section -->
	<section class="bg-[url('/goldenGate.jpg')] bg-cover bg-center h-screen flex items-center justify-center text-white">
		
		<NavBar></NavBar>

	</section>


    <!-- About Section -->
	<section id="About">
		<About></About>
	</section>


	<!-- Services Section -->
	<section id="Services">
		<Services></Services>
	</section>

	<!-- Career Section -->
	 <section id="Career">
		<CareerSection></CareerSection>
	 </section>

	 <!-- Contact Section -->
	  <section id="Contact">
		<ContactSection></ContactSection>
	  </section>

	  <!-- Copyright Bar -->
	   <section id="Copyright">
		<Copyright></Copyright>
	   </section>
</html>
