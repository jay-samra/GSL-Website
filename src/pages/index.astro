---
import LandingSection from "../components/LandingSection.astro"
import "../styles/global.css";
import NavBar from "../components/navBar.astro";
import About from "../components/AboutSection.astro";
import Services from "../components/ServicesSection.astro"
import CareerSection from "../components/CareerSection.astro";
import ContactSection from "../components/ContactSection.astro";
import Copyright from "../components/Copyright.astro";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Golden State Lines INC.</title>

		<link rel="preconnect" href="https://fonts.googleapis.com" />
  		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link href="https://fonts.googleapis.com/css2?family=Kanit:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Montserrat:ital,wght@0,100..900;1,100..900&family=Scheherazade+New:wght@400;500;600;700&display=swap" rel="stylesheet">

	</head>
	
	


	<!-- Hero Section -->
	<section class="relative h-screen flex items-center justify-center text-white overflow-hidden">
		<!-- Alternating Background Images -->
        <div class="absolute inset-0 bg-cover bg-center animation1" style="background-image: url('/bayBridge.jpg');"></div>
        <div class="absolute inset-0 bg-cover bg-center animation2" style="background-image: url('/goldenGate.jpg');"></div>
       
        <!-- dark overlay -->
        <div class="absolute inset-0 bg-black/30"></div>
		<NavBar></NavBar>
		
		<!-- Hero Content -->
		<div class="relative z-50 text-center max-w-4xl mx-auto px-6">
			<h1 class="text-6xl md:text-7xl font-bold mb-6 leading-tight">
				Golden State Lines
			</h1>
			<div class="w-24 h-1 bg-blue-500 mx-auto mb-6"></div>
			<p class="text-2xl md:text-3xl font-light mb-8 text-blue-100">
				Reliable Transportation Solutions Across Northern California
			</p>
			<div class="flex flex-col sm:flex-row gap-4 justify-center">
				<a href="#Contact" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-4 px-8 rounded-lg transition-colors duration-200 text-lg shadow-lg">
					Get A Quote
				</a>
				<a href="#Services" class="border-2 border-white text-white hover:bg-white hover:text-gray-900 font-semibold py-4 px-8 rounded-lg transition-colors duration-200 text-lg">
					Our Services
				</a>
			</div>
		</div>

	</section>

	<!-- Animation Details -->
	 <style>
		@keyframes animate1{
			0%, 45% {opacity : 1;}
			50%, 95% {opacity : 0;}
			100% {opacity : 1;}
		}

		@keyframes animate2{
			0%, 45% {opacity : 0;}
			50%, 95% {opacity : 1;}
			100%  {opacity : 0;}
		}

		.animation1{
			animation: animate1 8s infinite
		}

		.animation2{
			animation: animate2 8s infinite
		}
	 </style>

    <!-- About Section -->
	<section id="About">
		<About></About>
	</section>


	<!-- Services Section -->
	<section id="Services">
		<Services></Services>
	</section>

	<!-- Career Section -->
	 <section id="Career">
		<CareerSection></CareerSection>
	 </section>

	 <!-- Contact Section -->
	  <section id="Contact">
		<ContactSection></ContactSection>
	  </section>

	  <!-- Copyright Bar -->
	   <section id="Copyright">
		<Copyright></Copyright>
	   </section>
</html>
